									<form>
										<h3>Edit Blueberry</h3>
										<div class="form-group row" style="margin-left:10px;">
											<label for="product" class="col-2 col-form-label">Product Name</label>
											<div class="col-10">
												<input class="form-control" type="text" value="Blueberry" id="product">
											</div>
										</div>
										<div class="form-group row" style="margin-left:10px;">
											<label for="price" class="col-2 col-form-label">Price</label>
											<div class="col-10">
												<input class="form-control" type="text" value="0.18" id="price">
											</div>
										</div>
										<div class="form-group row" style="margin-left:10px;">
											<label for="picture">Picture</label>
											<input type="file" class="form-control-file" id="picture" aria-describedby="fileHelp">
										</div>
										<br>
										<div class="form-group row">
											<div class="offset-sm-2 col-sm-10" style="margin-left:40px;">
												<button type="submit" class="btn btn-info">Submit</button>
											</div>
										</div>
